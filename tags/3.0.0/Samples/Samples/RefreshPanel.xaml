<UserControl x:Class="com.moceanmobile.mast.samples.RefreshPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <StackPanel x:Name="LayoutRoot" Background="Black">
        <TextBlock Text="Site:" />
        <TextBox x:Name="SiteTextBox" InputScope="Number"/>
        <TextBlock Text="Zone:" />
        <TextBox x:Name="ZoneTextBox" InputScope="Number"/>
        <Button x:Name="RefreshButton" Content="Refresh"/>
        <Button x:Name="CancelButton" Content="Cancel"/>
    </StackPanel>
</UserControl>