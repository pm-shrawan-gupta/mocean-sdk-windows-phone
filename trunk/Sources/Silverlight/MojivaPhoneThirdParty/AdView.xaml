<UserControl x:Class="MojivaPhone.AdView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
	xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
	xmlns:x1="http://schemas.microsoft.com/client/2007"
	xmlns:x2="http://schemas.microsoft.com/client/2007"
	xmlns:my="clr-namespace:MojivaPhone"
	xmlns:MMAdView="clr-namespace:mmiWP7SDK;assembly=WP7SDK">

	<Grid x:Name="LayoutRoot" ShowGridLines="False" DataContext="{Binding}" Background="Transparent">
		<phone:WebBrowser HorizontalAlignment="Left" Name="m_webBrowser" VerticalAlignment="Top" Height="480" Width="480" IsScriptEnabled="True" Background="Transparent" />
		<MMAdView:MMAdView Name="mMAdView" Apid="0" Width="480" Height="480" RefreshTimer="-1" AdType="MMBannerAdTop" />
	</Grid>
</UserControl>
